generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Task {
  id     Int     @id @default(autoincrement())
  name   String
  steps  Step[]
}

model Step {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  link        String?
  Task        Task?   @relation(fields: [taskId], references: [id])
  taskId      Int?
}
